# Database Configuration
DB_USER=tradinguser
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_HOST=pgbouncer
DB_PORT=5432
DB_NAME=tradingdb
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}

# KiteConnect API Configuration
# Get your API key and secret from https://kite.trade/
# Callback URL must match exactly in Kite Console
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
KITE_ACCESS_TOKEN=
KITE_REDIRECT_URL=https://zopilot.in/api/kite/callback

# Domain Configuration (for production SSL)
DOMAIN=zopilot.in

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# Worker Configuration
BATCH_SIZE=5000
BATCH_TIMEOUT=1
PREFETCH_COUNT=1000

# Ingestion Service Configuration
INGESTION_BATCH_SIZE=500
INGESTION_BATCH_TIMEOUT=0.5

# CORS Configuration (comma-separated for multiple origins)
# Use * for development, specific domains for production
ALLOWED_ORIGINS=https://zopilot.in,https://www.zopilot.in

# Instruments to track (comma-separated instrument tokens)
# Example: NFO indices and popular stocks
# 260105 = NIFTY, 261897 = BANKNIFTY, 265 = FINNIFTY
INSTRUMENTS=260105,261897,265

# Monitoring Configuration
GRAFANA_PASSWORD=admin

# Timezone
TZ=Asia/Kolkata
